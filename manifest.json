{
	"manifest_version": 3,
	"name": "Night Owl Tab Manager",
	"version": "1.1.0",
	"description": "Easy session management - no more late night tabs",
	"author": "DonkeyDrills Software Development Solutions",
	"homepage_url": "https://github.com/vctrubio/Night-Owl-Brave-Extensension",
	"permissions": [
		"tabs",
		"storage"
	],
	"background": {
		"service_worker": "src/js/background.js"
	},
	"action": {
		"default_popup": "src/html/popup.html",
		"default_icon": {
			"16": "assets/icon16.png",
			"48": "assets/icon48.png",
			"128": "assets/icon128.png"
		}
	},
	"icons": {
		"16": "assets/icon16.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	}
}