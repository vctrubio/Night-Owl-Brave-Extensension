{
	"manifest_version": 3,
	"name": "Night Owl Tab Manager",
	"version": "1.0.0",
	"description": "A tab manager with keyboard shortcuts and theme options",
	"permissions": [
		"tabs",
		"storage",
		"commands"
	],
	"background": {
		"service_worker": "src/js/background.js"
	},
	"action": {
		"default_popup": "src/html/popup.html",
		"default_icon": "assets/png.png"
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+E"
			},
			"description": "Open Night Owl popup"
		},
		"shortcut-1": {
			"suggested_key": {
				"default": "Ctrl+1"
			},
			"description": "Open shortcut 1"
		},
		"shortcut-2": {
			"suggested_key": {
				"default": "Ctrl+2"
			},
			"description": "Open shortcut 2"
		},
		"shortcut-3": {
			"suggested_key": {
				"default": "Ctrl+3"
			},
			"description": "Open shortcut 3"
		}
	}
}